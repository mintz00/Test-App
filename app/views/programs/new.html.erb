<h1>New program</h1>

<% form_for(@program) do |meal_form , condition_form| %>
  <%= meal_form.error_messages %>
  <%= condition_form.error_messages %>

  <p>
    <%= meal_form.label :name %><br />
    <%= meal_form.text_field :name %>
  </p>
  <p>
    <%= condition_form.label :name %><br />
    <%= condition_form.text_field :name %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', programs_path %>
